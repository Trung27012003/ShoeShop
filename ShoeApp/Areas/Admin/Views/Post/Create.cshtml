@model ShoeApp.Models.Post

@{
    ViewData["Page"] = "Bài đăng";
    ViewData["Title"] = "Thêm mới";
}
<!-- include libraries(jQuery, bootstrap) -->

<script src="https://code.jquery.com/jquery-3.5.1.min.js"></script> @* Sử dụng*@
<script src="https://stackpath.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script> @* Sử dụng*@

<!-- include summernote css/js -->
<link href="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote.min.css" rel="stylesheet"> @* Sử dụng*@
<script src="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote.min.js"></script> @* Sử dụng*@
<form asp-action="Create">

    <div class="row mt-4">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        
        <div class="col-lg-4">
            <div class="card h-100">
                <div class="card-body">
                    <h5 class="font-weight-bolder">Ảnh bìa</h5>
                    <div class="row">
                        <div action="/Admin/Post/UploadImage" class="form-control dropzone" ></div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-8 mt-lg-0 mt-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="font-weight-bolder">Thông tin bài đăng</h5>
                    <div class="row">
                        <div class="col-12 col-sm-12">
                            <label>Tiêu đề </label>
                            <input class="multisteps-form__input form-control" type="text" asp-for="Tittle" />
                            <input class="multisteps-form__input form-control" type="text" asp-for="TittleImage" value="1" hidden />
                            <span asp-validation-for="Tittle" class="text-danger"></span>
                        </div>
                        <div class="col-12 col-sm-12">
                            <label>Mô tả </label>
                            <input class="multisteps-form__input form-control" type="text" asp-for="Description" />
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                        <div class="col-12 col-sm-12">
                            <label>Xuất bản</label>
                        </div>
                        <div class="form-check form-switch ps-3">
                            <input class="form-check-input ms-0" asp-for="Status" type="checkbox" onchange="this.value=this.checked">
                            <label class="form-check-label text-body ms-3 text-truncate w-80 mb-0"
                                   for="flexSwitchCheckDefault">Xuất bản bài viết</label>
                        </div>
                    </div>

                    <div class="row">
                        <label class="mt-4">Nội dung</label>
                        <textarea asp-for="Contents" id="summernote"></textarea>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <br />
    <br />
    <br />
    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
<script>
    /*sử dụng*/
    $('#summernote').summernote({
        placeholder: 'Nhập nội dung',
        tabsize: 5,
        height: 300,
        toolbar: [
            ['style', ['style']],
            ['font', ['bold', 'underline', 'clear']],
            ['color', ['color']],
            ['para', ['ul', 'ol', 'paragraph']],
            ['table', ['table']],
            ['insert', ['link', 'picture', 'video']],
            ['view', ['fullscreen', 'codeview', 'help']]
        ]
    });
</script>

<div>
    <a asp-action="Index">Back to List</a>
</div>
