@if (SignInManager.IsSignedIn(User))
{
    @if (UserManager.GetUserAsync(User).Result.ProfilePicture != null)
    {
        <div class="widget-header mr-3">
            <img class="avatar rounded-circle" alt="profile" src="data:image/*;base64,@(Convert.ToBase64String(UserManager.GetUserAsync(User).Result.ProfilePicture))" />
        </div>
    }
    <div class="widget-header mr-3">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @User.Identity.Name!</a>
        
    </div>
    <div class="widget-header">
        <a href="#" class="widget-view">
            <div class="icon-area">
                <i class="fa fa-shopping-cart"></i>
                <span class="notify">3</span>
            </div>
            <small class="text"> Cart </small>
        </a>
    </div>
        <form class="widget-header mr-3" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button type="submit" class="btn btn-outline-danger">Logout</button>
            </form>

}
else
{

    <div class="widget-header mr-3">
        <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Register">Register</a>
    </div>
    <div class="widget-header mr-3">
        <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login">Login</a>
    </div>

}

